<% provide(:title, 'Edit user') %>

<h1>Edit your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <!-- removing , "Insert your name" after :name Rails will display Name as label -->
        <%= f.label :name, "Insert your new name" %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email, "Insert your new email" %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password, "Insert a new password" %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Confirm your new password" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">change</a>
    </div>

  </div>
</div>
